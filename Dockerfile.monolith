# Utilizando uma imagem base otimizada para ARM64
FROM python:3.9-slim

# Instalando dependências do sistema necessárias
RUN apt-get update && apt-get install -y \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Definindo o diretório de trabalho dentro do container
WORKDIR /app

# Copiando os arquivos de dependências
COPY requirements.txt .

# Instalando as dependências Python
# Fixando numpy < 2 para evitar conflitos com torch/whisper
RUN pip install --no-cache-dir -r requirements.txt

# Copiando o código da aplicação
COPY . .

# Definindo o PYTHONPATH para garantir que os módulos sejam encontrados
ENV PYTHONPATH=/app

# Expondo a porta da aplicação (FastAPI rodará na 8000)
EXPOSE 8000

# Comando para rodar a aplicação
CMD ["python", "app.py"]